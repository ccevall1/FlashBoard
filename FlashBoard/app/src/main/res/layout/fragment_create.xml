<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity$PlaceholderFragment">

    <TextView android:id="@+id/section_label" android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <Spinner
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:id="@+id/spinner_choose_subject"
        android:background="#9f9f9f"
        android:popupBackground="#9f9f9f"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/editText_question"
        android:layout_below="@+id/spinner_choose_subject"
        android:layout_centerHorizontal="true"
        android:hint="@string/editText_question"/>
    <EditText
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/editText_answer"
        android:layout_below="@+id/editText_question"
        android:layout_centerHorizontal="true"
        android:hint="@string/editText_answer"/>

    <Button
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:text="@string/button_insert"
        android:id="@+id/button_start"
        android:layout_below="@+id/editText_answer"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:textSize="50dp"/>


</RelativeLayout>
